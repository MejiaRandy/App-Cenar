<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Categorías</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h2>Categorías</h2>
        <a href="/categorias/crear" class="btn btn-primary">Crear Nueva Categoría</a>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% categorias.forEach(categoria => { %>
                    <tr>
                        <td><%= categoria.nombre_categoria %></td>
                        <td><%= categoria.descripcion %></td>
                        <td>
                            <a href="/categorias/editar/<%= categoria.id %>" class="btn btn-warning btn-sm">Editar</a>
                            <form action="/categorias/eliminar/<%= categoria.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
